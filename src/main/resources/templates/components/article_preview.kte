@param articleId: Int
@param name: String
@param date: String
@param description: String

<a class="article-preview" href="/news/${articleId}">
    <img src="" alt="${name}">

    <div>
        <h2>${name}</h2>
        <p class="subtext">${date}</p>
        <p class="description">${description}</p>
    </div>
</a>